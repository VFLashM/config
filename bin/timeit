#!/usr/bin/env python
import sys
import os
import time
import datetime

out = sys.stdout
if len(sys.argv) > 1 and sys.argv[1] == '-e':
    out = sys.stderr
    sys.argv.pop(1)

if len(sys.argv) == 1:
    print 'Usage: timeit [-e] <command> <args>'
    print '\t-e redirects timeit output into stderr'
    sys.exit(1)
    
before = time.time()
rc = os.system(' '.join(sys.argv[1:]))
after = time.time()
elapsed = after - before
out.write('Execution took %.2f seconds (%s), rc=%s\n' % (elapsed, datetime.timedelta(seconds=elapsed), rc))
